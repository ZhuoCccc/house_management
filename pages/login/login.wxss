.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh; /* Use min-height for flexibility */
  background: linear-gradient(135deg, #6DD5FA, #FF758C); /* A vibrant but soft gradient */
  padding: 20px;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; /* Common system font stack */
}

.login-form {
  background-color: rgba(255, 255, 255, 0.95); /* Slightly transparent white for a modern feel */
  padding: 35px 30px; /* Increased padding */
  border-radius: 20px; /* More rounded corners */
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); /* Softer, more diffused shadow */
  width: 100%;
  max-width: 380px; /* Adjusted max-width */
  box-sizing: border-box;
}

.title {
  font-size: 32px; /* Larger title */
  font-weight: 700; /* Bolder */
  text-align: center;
  margin-bottom: 12px;
  color: #2c3e50; /* Darker, more professional color */
  letter-spacing: 0.5px;
}

.subtitle {
  font-size: 16px;
  color: #7f8c8d; /* Softer gray */
  text-align: center;
  margin-bottom: 35px; /* Increased spacing */
}

.form-item {
  margin-bottom: 22px; /* Adjusted spacing */
}

.form-label {
  font-size: 14px;
  color: #34495e; /* Darker label color */
  margin-bottom: 10px; /* Increased spacing from input */
  display: block; /* Ensure it takes full width if needed */
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff; /* White background for input itself */
  border-radius: 10px; /* More rounded inputs */
  padding: 12px 15px; /* Adjusted padding */
  border: 1px solid #dfe6e9; /* Lighter border */
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-wrapper:focus-within { /* Style when an element inside is focused */
  border-color: #6DD5FA; /* Accent color on focus */
  box-shadow: 0 0 0 3px rgba(109, 213, 250, 0.2); /* Focus ring */
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 12px;
  opacity: 0.5;
}

.input {
  flex: 1;
  font-size: 16px;
  border: none;
  outline: none;
  background-color: transparent;
  color: #2c3e50;
}

.input::placeholder {
  color: #b0bec5; /* Lighter placeholder */
}

/* Options like remember me / forgot password can be added here if needed */
