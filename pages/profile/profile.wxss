.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 18px; /* Increased vertical padding for spaciousness */
  min-height: 30px; /* Content height itself, overall height will be this + padding */
  font-size: 15px;
  color: #333;
  border-bottom: 1px solid #f0f0f0; /* Slightly more visible border */
  cursor: pointer;
  background-color: #fff; /* Explicit white background */
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-main-content {
  display: flex;
  align-items: center;
}

.menu-item-main-content.centered-logout {
    flex-grow: 1;
    justify-content: center;
}

.menu-icon {
  font-size: 20px; /* Adjusted icon size */
  margin-right: 15px; /* Space between icon and label */
  color: #555555; /* Darker icon color */
  width: 24px; /* Fixed width for alignment */
  text-align: center;
}

.menu-label {
  flex-shrink: 0;
  color: #333;
}

.logout-label {
    color: #e74c3c; /* A slightly softer red */
    font-weight: 500;
}

.menu-arrow {
  color: #cccccc; /* Slightly darker arrow for better visibility */
  font-size: 18px;
  margin-left: 8px;
} 